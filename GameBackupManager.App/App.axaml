<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="GameBackupManager.App.App"
             xmlns:local="using:GameBackupManager.App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://GameBackupManager.App/Styles/LightTheme.axaml" />
        <StyleInclude Source="avares://GameBackupManager.App/Styles/DarkTheme.axaml" />
    </Application.Styles>
</Application>